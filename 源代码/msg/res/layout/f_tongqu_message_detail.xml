<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<TableLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:stretchColumns="2" >

			<TableRow style="@style/TableRow" >

				<TextView
					style="@style/Label"
					android:text="标题" />

				<View style="@style/HDivider" />

				<TextView
					android:id="@+id/tv_name"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="标题" />
			</TableRow>

			<TableRow style="@style/TableRow" >

				<TextView
					style="@style/Label"
					android:text="创建时间" />

				<View style="@style/HDivider" />

				<TextView
					android:id="@+id/tv_createTime"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="创建时间" />
			</TableRow>

			<TableRow style="@style/TableRow" >

				<TextView
					style="@style/Label"
					android:text="活动" />

				<View style="@style/HDivider" />

				<TextView
					android:id="@+id/tv_huodong"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="活动" />
			</TableRow>

			<TableRow style="@style/TableRow" >

				<TextView
					style="@style/Label"
					android:text="报名" />

				<View style="@style/HDivider" />

				<TextView
					android:id="@+id/tv_baoming"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="报名" />
			</TableRow>

			<TableRow style="@style/TableRow" >

				<TextView
					style="@style/Label"
					android:text="地点" />

				<View style="@style/HDivider" />

				<TextView
					android:id="@+id/tv_location"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="地点" />
			</TableRow>

			<TableRow style="@style/TableRow" >

				<TextView
					style="@style/Label"
					android:text="人数" />

				<View style="@style/HDivider" />

				<TextView
					android:id="@+id/tv_renshu"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="人数" />
			</TableRow>

			<TableRow style="@style/TableRow" >

				<TextView
					style="@style/Label"
					android:text="发起" />

				<View style="@style/HDivider" />

				<TextView
					android:id="@+id/tv_source"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="发起" />
			</TableRow>
		</TableLayout>

		<Button
			android:id="@+id/btn_view_in_tongqu"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="去同去网查看" />

		<WebView
			android:id="@+id/wv_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />
	</LinearLayout>

</ScrollView>